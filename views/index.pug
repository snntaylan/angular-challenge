extends layout

block content
  .container-fluid
    h2.ui.header  SMS CHALENGE
    form#filter-form(ng-submit='submit()')
      .form-row
        .col-lg-2.col-md-3.col-6
          label(for='StartDate') Start Date
          input#StartDate.form-control.form-control-sm(ng-model='StartDate', data-date-format='yyyy-mm-dd', data-provide='datepicker', name='StartDate', placeholder='Start Date', type='date')
        .col-lg-2.col-md-3.col-6
          label(for='EndDate') End Date
          input#EndDate.form-control.form-control-sm(ng-model='EndDate', data-date-format='yyyy-mm-dd', data-provide='datepicker', name='EndDate', placeholder='End Date', type='date')
        div(style='margin-top:30px;')
          button#form_submit.btn.btn-primary.btn-sm(type='submit', data-loading-text='Loading...') Query
      hr.mb-1
      .table-responsive
        table.table.table-striped.table-sm.table-light.table-bordered
          tr
            th(ng-click='sortColumn("id")' ng-class='sortClass("id")') Id
            th(ng-click='sortColumn("city")' ng-class='sortClass("city")') City
            th(ng-click='sortColumn("start_date")' ng-class='sortClass("start_date")') S.Date
            th(ng-click='sortColumn("end_date")' ng-class='sortClass("end_date")') E.Date
            th(ng-click='sortColumn("price")' ng-class='sortClass("price")') Price
            th(ng-click='sortColumn("status")' ng-class='sortClass("status")') Status
            th(ng-click='sortColumn("color")' ng-class='sortClass("color")') Color
          tr(ng-repeat='item in items|orderBy:column:reverse')
            td {{item.id}}
            td {{item.city}}
            td {{item.start_date}}
            td {{item.end_date}}
            td {{item.price}}
            td {{item.status}}
            td {{item.color}}
          
